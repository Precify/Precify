<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_marginTop="8dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:text="TextView"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="16dp"
            android:textFontWeight="700"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:fontFamily="@font/poppins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/state_title"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"/>
    <LinearLayout
            android:paddingStart="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="75dp"
                android:layout_marginEnd="16dp"
                android:tint="@color/colorAccent"
                android:layout_gravity="center_vertical"
                android:layout_height="75dp" app:srcCompat="@drawable/state_total" android:id="@+id/imageView3"
                android:layout_weight="1"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1">
            <TextView
                    android:text="Total Cases"
                    android:layout_marginTop="8dp"
                    android:textFontWeight="600"
                    android:padding="0dp"
                    android:fontFamily="@font/poppins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView4"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
            <TextView
                    android:text="TextView"
                    android:fontFamily="@font/poppins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/state_total_tv"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:paddingStart="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="75dp"
                android:layout_marginEnd="16dp"
                android:tint="@color/colorAccent"
                android:layout_gravity="center_vertical"
                android:layout_height="75dp" app:srcCompat="@drawable/state_active" android:id="@+id/imageView4"
                android:layout_weight="1"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1">
            <TextView
                    android:text="Active Cases"
                    android:layout_marginTop="8dp"
                    android:textFontWeight="700"
                    android:padding="0dp"
                    android:fontFamily="@font/poppins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView5"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
            <TextView
                    android:text="TextView"
                    android:fontFamily="@font/poppins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/state_active_tv"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:paddingStart="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="75dp"
                android:layout_marginEnd="16dp"
                android:tint="@color/colorAccent"
                android:layout_gravity="center_vertical"
                android:layout_height="75dp" app:srcCompat="@drawable/state_cure" android:id="@+id/imageView5"
                android:layout_weight="1"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1">
            <TextView
                    android:text="Recovered Cases"
                    android:layout_marginTop="8dp"
                    android:textFontWeight="700"
                    android:padding="0dp"
                    android:fontFamily="@font/poppins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView6"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
            <TextView
                    android:text="TextView"
                    android:fontFamily="@font/poppins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/state_recovered_tv"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:paddingStart="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="75dp"
                android:layout_marginEnd="16dp"
                android:tint="@color/colorAccent"
                android:layout_gravity="center_vertical"
                android:layout_height="75dp" app:srcCompat="@drawable/state_death" android:id="@+id/imageView6"
                android:layout_weight="1"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1">
            <TextView
                    android:text="Death Cases"
                    android:layout_marginTop="8dp"
                    android:textFontWeight="700"
                    android:padding="0dp"
                    android:fontFamily="@font/poppins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView7"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
            <TextView
                    android:text="TextView"
                    android:fontFamily="@font/poppins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/state_death_tv"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>